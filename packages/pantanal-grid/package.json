{
  "name": "@pantanal/grid",
  "version": "1.2.3",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs"
    },
    "./styles.css": "./dist/grid.css"
  },
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "vite build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest",
    "prepublishOnly": "cp ../../README.md ./README.md && yarn build"
  },
  "peerDependencies": {
    "vue": "^3.3.0",
    "xlsx": "^0.18.5",
    "jspdf": "^2.5.0",
    "html2canvas": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "2.1.9",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.0.5",
    "vue": "^3.4.38",
    "vue-tsc": "^3.0.5"
  },
  "description": "Vue 3 data grid with Tailwind-friendly styling",
  "sideEffects": [
    "*.css"
  ],
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    },
    "xlsx": {
      "optional": true
    },
    "jspdf": {
      "optional": true
    },
    "html2canvas": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heberalmeida/pantanal-grid.git"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  }
}
