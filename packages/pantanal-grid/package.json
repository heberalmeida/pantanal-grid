{
  "name": "@pantanal/grid",
  "version": "1.0.5",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.cjs"
    },
    "./styles.css": "./dist/grid.css"
  },
  "scripts": {
    "dev": "vite --config vite.config.ts",
    "build": "vite build",
    "test": "vitest run",
    "test:ui": "vitest",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.0",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^2.0.5",
    "vue": "^3.4.38"
  },
  "description": "Vue 3 data grid with Tailwind-friendly styling",
  "sideEffects": [
    "*.css"
  ],
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heberalmeida/pantanal-grid.git"
  }
}
